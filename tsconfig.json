{
  "compilerOptions": {
    "outDir": "./dist", // or another directory
    "target": "es5",
    "lib": ["dom", "es2015"],
    "allowJs": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "noEmit": false,
    "skipLibCheck": true,
    "strict": true, // Enable strict type checking
    "noUnusedLocals": false, // Disable errors for unused variables
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "composite": true
}
